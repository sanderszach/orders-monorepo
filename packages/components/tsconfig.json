{
    "compilerOptions": {
      "outDir": "dist",
      "module": "ESNext",
      "target": "ESNext",
      "jsx": "react",
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": false,
      "esModuleInterop": true,
      "strict": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["src"]
  }
  